{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": "warn",
      "suspicious": "warn",
      "performance": "warn",
      "a11y": "warn",
      "correctness": "warn",
      "complexity": "warn",
      "security": "warn",
      "nursery": "warn"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "extends": ["ultracite/core", "ultracite/next", "ultracite/react"]
}
